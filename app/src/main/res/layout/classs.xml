<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_green"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include

        android:id="@+id/head"
        layout="@layout/layer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/head"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Dawson A Message"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@android:color/white"
        >

        <TextView
            android:visibility="visible"
            android:id="@+id/clicktext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Press Record to Start"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20dp"

            />

        <TextView
            android:visibility="gone"
            android:id="@+id/clicktext1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Recording...Click Stop when Done"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20dp"

            />


        <TextView

            android:visibility="gone"
            android:id="@+id/clicktext2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Recording Stopped...Click Play to Listen your Recording"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20dp"

            />


        <TextView

            android:visibility="gone"
            android:id="@+id/clicktext3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Playing Recording.....Click Send to Leave Dawson a Message"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20dp"

            />


        <TextView

            android:visibility="gone"
            android:id="@+id/clicktext4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Thankyou"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="20dp"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/buttons_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.25"
            android:background="@color/request_red"
            android:text="Record"

            />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.25"
            android:background="@color/request_red"
            android:text="Stop"
            />

        <Button

            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.25"
            android:background="@color/request_red"
            android:text="Play"

            />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:background="@color/request_red"
            android:text="Send"
            />




    </LinearLayout>

    <include
        android:id="@+id/layer_marquee"
        layout="@layout/layer_runningtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>