<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <include
        android:id="@+id/head"
        layout="@layout/layer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:weightSum="1"
            android:orientation="vertical"
            android:padding="10sp">


            <!--Item 1 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/listen_item"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/dawson" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DMLive"
                        android:textColor="@color/blog_brown"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Replay"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="15sp"
                        android:typeface="sans" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"

                    >

                    <ImageView
                        android:id="@+id/player_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/play" />


                    <ProgressBar
                        android:id="@+id/progress_1"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:drawingCacheQuality="high"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>


            <!--Item 2 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/listen_item"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/dawsonhopeline" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TheHopeLine"
                    android:textColor="@color/blog_brown"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="with Dawson McAllister"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:typeface="sans" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Replay"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="15sp"
                        android:typeface="sans" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/player_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/play" />


                    <ProgressBar
                        android:id="@+id/progress_2"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:drawingCacheQuality="high"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



   <!-- <ImageView
            android:id="@+id/join_tribe"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/chat_green"
            android:orientation="horizontal"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/join_the_tribe" />-->

    <LinearLayout
        android:id="@+id/call_the_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.11"
        android:orientation="horizontal"
        android:background="@color/text_color"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:src="@mipmap/phone_hopeline"
            android:scaleType="centerInside"/>

        <TextView
           android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"

            android:text="@string/Call_the_show" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_a_station"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.11"
        android:orientation="horizontal"
        android:background="@color/phone_color"
        android:padding="4dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@mipmap/radio"
            android:scaleType="centerInside"/>

        <TextView
            android:paddingEnd="11dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"

            android:text="@string/podcast" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/join_the_converstation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/converstation_color"
        android:padding="4dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@mipmap/facebook"
            android:scaleType="centerInside"/>

        <TextView
            android:paddingEnd="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="right"

            android:text="@string/join_conversation" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/twitter_color"
        android:padding="4dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@mipmap/twitterr"
            android:scaleType="centerInside"/>

        <TextView
            android:paddingEnd="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="right"

            android:text="@string/follow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/helped"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.11"
        android:orientation="horizontal"
        android:background="@color/converstation_color"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/microphone" />

        <TextView
            android:paddingEnd="11dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:text="@string/leave_message" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.380"
        android:gravity="top|center"
        android:padding="8dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_join_the_converstation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@mipmap/facebook"
            />
 <ImageView
     android:id="@+id/img_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/twitter" />

    </LinearLayout>

    <include
        android:id="@+id/bottomMark"
        layout="@layout/layer_runningtext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom" />
</LinearLayout>

